{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true
  },
  "files": {
    "experimentalScannerIgnores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.next/**"
    ]
  },
  "overrides": [
    {
      "includes": ["*.css"],
      "formatter": {
        "enabled": false
      }
    }
  ]
}
